.stage-detail-target-w {
    padding: 32rpx 32rpx 10rpx;
    border-radius: 12rpx;
    color: #222834;
    background: #F7F7F9;
}

.stage-detail-target-n {
    color: #707784;
}

.stage-detail-target {
    display: flex;
    margin-bottom: 20rpx;
    justify-content: space-between;
    font-size: 24rpx;
    line-height: 32rpx;
}

.stage-detail-target-icon {
    height: 24rpx;
    width: 24rpx;
    margin-right: 8rpx;
    /* vertical-align: middle; */
}


.coach-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 1px solid rgba(34, 40, 52, 0.03);
    margin-right: 16rpx;
}

.stage-coach {
    width: 100%;
    box-sizing: border-box;
    padding: 0 32rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #222834;
    line-height: 36rpx;
    margin-top: 32rpx;
}

.stage-detail-target-down {
    display: flex;
    align-items: center;
}
.stage-detail-target-up {
    display: flex;
    align-items: center;
}

.stage-remark-isShow {
    z-index: 9;
    font-size: 12px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #386DF3;
    line-height: 16px;
}