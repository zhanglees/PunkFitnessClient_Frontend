.stage-detail {
    min-height: 100vh;
    display: block;
    padding-top: 48rpx;
}

.plan-target-title {
    font-size: 24rpx !important;
    color: #BCC0C7;
    line-height: 32rpx;
    text-align: center;
    width: 100%;
}

.plan-target-list {
    text-align: center;
    flex-wrap: nowrap;
    margin: 16rpx 0 48rpx;
    font-size: 44rpx;
    font-weight: 600;
    color: #386DF3;
    line-height: 56rpx;
}

.plan-target-list-item {
    margin-right: 20rpx;
    display: inline-block;
}

.plan-info {
    width: 100%;
    text-align: center;
    margin-bottom: 64rpx !important;
}

.plan-info {
    margin-bottom: 20rpx;
}

.plan-info-item {
    display: inline-block;
    box-sizing: border-box;
    width: 33%;
    position: relative;
    font-size: 24rpx;
    color: #222834;
    line-height: 44rpx;
}

.plan-info .plan-info-item:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    width: 1px;
    background: #F1F1F3;
    height: 48rpx;
    top: 20rpx;
}

.plan-info-item-v {
    font-size: 36rpx;
    font-weight: bold;
}

.plan-info-item-g {
    color: #707784;
}

.stage-item {
    border-top: 1px solid #F1F1F3;
    color: #222834;
    padding: 0 0 32rpx;
    width: 100%;
    box-sizing: border-box;
}

.stage-title {
    width: 100%;
    box-sizing: border-box;
    padding: 0 72rpx 0 64rpx;
    position: relative;
    margin-top: 48rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: #222834;
    line-height: 40rpx;
}

.stage-title::after {
    content: "";
    position: absolute;
    left: 32rpx;
    top: 12rpx;
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #386DF3;
    display: block;
}

.stage-list-item {
    margin-bottom: 20rpx;
    border-bottom: 1px solid #F1F1F3;
    padding-bottom: 24rpx;
}

.stage-list .stage-list-item:last-child {
    border: none;
    padding-bottom: 0;
}

.stage-detail-title {
    position: relative;
    font-size: 28rpx;
    color: #222834;
    line-height: 36rpx;
    margin: 32rpx 0 16rpx;
}

.item-detail {
    display: inline-block;
}

.item-detail-item {
    font-size: 24rpx;
    color: #707784;
    line-height: 32rpx;
    display: inline;
}

.item-detail .item-detail-item:not(:last-child)::after {
    content: '、';
}

.stage-list {
    width: 100%;
    box-sizing: border-box;
    padding: 0 32rpx;
}

.stage-remark {
    font-size: 28rpx;
    color: #222834;
    line-height: 36rpx;
    margin-top: 32rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 0 32rpx;
    overflow: visible;
}

.stage-remark-d {
    color: #707784;
    font-size: 24rpx;
    margin-top: 16rpx;
    width: fit-content;
    /* word-break: keep-all;
    white-space: nowrap; */
}

