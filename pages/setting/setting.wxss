/* pages/packageB/mine/setting/setting.wxss */

page {
    background-color: #FAFAFC;
}

.userinfo-avatar {
    overflow: hidden;
    border-radius: 50%;
    width: 96rpx;
    height: 96rpx;
    border: 1px solid rgba(34, 40, 52, 0.03);
}

.userinfo-avatar-img {
    border-radius: 50%;
    width: 96rpx;
    height: 96rpx;
    float: right;
}

.head-portrait {
    height: 130rpx;
    width: 130rpx;
    display: inline-block;
    position: relative;
}

.form {
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #222834;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 12rpx;
    margin: 32rpx;
    box-sizing: border-box;
    padding: 0 32rpx;
    font-size: 28rpx;
}
.form .form-cell{
    width: 100%;
    box-sizing: border-box;
    line-height: 36rpx;
    padding: 32rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.form-cell-right{
    display: flex;
    align-items: center;
}
.form .form-cell:not(:last-child) {
    border-bottom: 1px solid #F1F1F3;
}

.form .v-placeholder {
    color: #BCC0C7;
}

.phone-wrapper {
    display: flex;
    align-items: center;
}

.phone-wrapper .weui-input {
    flex: 1;
}


