.footer {
    width: 100%;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.btn-logout {
    width: 100%;
    box-sizing: border-box;
    height: 88rpx;
    background: #EAEAF0;
    line-height: 88rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: #707784;
}

.change-dialog .weui-half-screen-dialog__ft {
    padding-left: 0;
    padding-right: 0;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
}

.change-dialog .weui-half-screen-dialog__ft .weui-btn {
    padding: 0;
    width: 328rpx !important;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 12rpx;
    font-size: 32rpx;
}

.change-dialog .weui-half-screen-dialog__ft .dialog-btn-cancel {
    border: 1px solid #E5E5E9;
    color: #707784;
}

.change-dialog .weui-half-screen-dialog__ft .dialog-btn-confirm {
    background: #386DF3;
    color: #FFFFFF;
}

.change-input,
.input-wrapper {
    height: 104rpx;
    background: #F7F7F9;
    border-radius: 12rpx;
    box-sizing: border-box;
}

.input-wrapper {
    position: relative;
    padding: 0 100rpx 0 32rpx;
}

.change-input {
    font-size: 28rpx;
    line-height: 104rpx;
}

.input-right {
    position: absolute;
    right: 16rpx;
    top: 32rpx;
    font-size: 28rpx;
    color: #707784;
}

.close-icon {
    background: #D2D2D3;
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    text-align: center;
    vertical-align: middle;
    display: inline-block;
    margin-left: 32rpx;
}

.close-icon-i {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
}

.dialog-picker {
    width: 100%;
    height: 176rpx;
}

.dialog-picker-item {
    line-height: 88rpx;
    text-align: center;
}

.dialog-picker-item-act {
    color: #386DF3;
    font-size: 32rpx;
    height: 88rpx;
}

.date-picker {
    width: 100%;
    height: 100%;
}

.img-icon {
    height: 20rpx;
    width: 20rpx;
    display: inline-block;
    margin-left: 16rpx;
}