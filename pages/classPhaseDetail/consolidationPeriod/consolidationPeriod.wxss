/* pages/classPhaseDetail/consolidationPeriod/consolidationPeriod.wxss */
page {
  position: relative;
}

.info-list {
  width: 100%;
  /* padding-bottom: 40rpx; */
  margin-top: 16rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
  border-bottom: 1px solid #F7F7F9;
  padding-bottom: 14r px;
}

.info-item {
  display: inline-block;
  text-align: center;
  color: #707784;
  position: relative;
  word-break: keep-all;
  white-space: nowrap;
  flex: 1;
  width: 250rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 72rpx;
  font-family: PingFangSC-Regular;
}

.info-item-act {
  color: var(--base);
  position: relative;
  font-family: PingFangSC-Medium;
  /* margin-bottom: 10rpx; */
}

.info-item-act::after {
  position: absolute;
  width: 32rpx;
  height: 4rpx;
  border-radius: 2rpx;
  bottom: 0;
  left: 43%;
  right: 0;
  bottom: 12rpx;
  content: '';
  background-color: var(--base);
}

.detail-ul {
  width: 100%;
}

.detail-li {
  display: flex;
  justify-content: space-between;
  border: 1px solid #F1F1F3;
  margin: 32rpx 32rpx 0;
  border-radius: 12rpx;
  height: 140rpx;
}

.detail-li-left {
  display: inline-block;
  margin: 28rpx 0 28rpx 32rpx;
  /* position: absolute;
    left: 10rpx; */
}

.detail-li-right {
  display: flex;
  margin-right: 10rpx;
  margin: 28rpx 32rpx 28rpx 0;
  /* position: absolute;
    right: 30rpx; */
}

.name-style {
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #222834;
  line-height: 44rpx;
  margin-bottom: 8rpx;
}

.time-style {
  height: 32rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #707784;
  line-height: 32rpx;
}

.img-style {
  width: 48rpx;
  height: 48rpx;
  font-size: 34rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  margin: 14rpx 8rpx 0 0;
}

.no-data1 {
  position: fixed;
  top: 50%;
}