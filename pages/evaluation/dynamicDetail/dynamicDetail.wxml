<!--pages/evaluation/dynamicDetail/dynamicDetail.wxml-->
<view class="container">
  <ul class="dynamic-ul">
    <li class="dynamic-li" wx:for="{{4}}" wx:key="index">
      <view class="dynamic-vedio">
        <video class="vedio-style" id="video{{index}}"
          src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"
          binderror="videoErrorCallback" bindloadedmetadata="getLength" show-play-btn='{{false}}'
          show-center-play-btn='{{false}}'  bindfullscreenchange="fullScreen">
          <cover-view>
        <cover-image class="play-style"  src="/images/icons/play.png"  bindtap="videoPlay"  data-i="{{index}}" hidden="{{isShow}}{{index}}"></cover-image>
        <!-- <cover-image class="play-style" src="/images/icons/suspend.png" ></cover-image> -->
      </cover-view>
          <view class="time-veido">{{duration}}</view>
        </video>
        <!-- <view class='video-play'>
          <image wx:if="{{isShow}}" bindtap="videoPlay" class='video-btn' src='/images/icons/icon-edit.png'
            data-I="{{index}}" />
          <image wx:else bindtap="videoPause" class='video-btn' src='/images/icons/icon-lesson-done.png'
            data-I="{{index}}" />
        </view> -->
      </view>
      <view class="bottom-container">

        <view class="bottom-title">单腿下蹲</view>
        <view class="bottom-text-container">
          <text class="bottom-text">躯干过分前倾</text>
        </view>
      </view>
    </li>
  </ul>
</view>