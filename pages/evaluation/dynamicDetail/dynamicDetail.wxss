/* pages/evaluation/dynamicDetail/dynamicDetail.wxss */
page {
  background-color: #F5F5F7;
}

.dynamic-ul {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 32rpx;
  border-radius: 12rpx;
  
}

.dynamic-li {
  border-radius: 12rpx;
  width: 336rpx;
  margin-bottom: 16rpx;
}

.dynamic-vedio {
  position: relative;
  width: 336rpx;
  border-radius: 12rpx 12rpx 0 0;
  /* filter:blur(10px); */
}

.bottom-container {
  box-sizing: border-box;
  width: 336rpx;
  height: 116rpx;
  background: #FFFFFF;
  padding: 16rpx 0 0 16rpx;
  margin-top: -12rpx;
  border-radius: 0 0 12rpx 12rpx;
}

.time-veido {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  height: 24rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  line-height: 12px;
  text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.2);
}

.bottom-title {
  display: block;
  height: 36rpx;
  font-size: 28rpx;
  color: #222834;
  line-height: 36rpx;
  margin-bottom: 12rpx;
}

.bottom-text-container {
  display: inline-block;
  background-color: rgb(244, 127, 54, 0.09);
  border-radius: 2px;
}

.bottom-text {
  z-index: 999;
  font-size: 20rpx;
  font-weight: 500;
  color: #F47F36;
  opacity: 1 !important;
  margin: 4rpx 8rpx;
}
.vedio-style{
  width: 100%;
}
.video-btn{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  bottom: 12rpx;
  left: 12rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  line-height: 12px;
  text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.2);
}
.play-style{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  left: 40%;
  top: 45%;
}
