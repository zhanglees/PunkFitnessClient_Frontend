.container{
    background-color: #eee;
    color: #333;
  }
.type-tab{
    padding: 20rpx 40rpx 0;
    text-align: left;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
}
.tab-item{
    display: inline-block;
    margin-right: 40rpx;
    line-height: 2;
    height: 60rpx;
}
.tab-item-act{
    color: var(--base);
    position: relative;
}
.tab-item-act::after{
    position: absolute;
    width: 100%;
    height: 2px;
    border-radius: 1px;
    bottom: 0;
    left: 0;
    right: 0;
    content: '';
    background-color: var(--base);
}

.detail{
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx 64rpx;
    background: #fff;
}
.detail-item{
    margin: 20rpx 0;
    display: flex;
    justify-content: space-between;
}
.detatil-top-right{
    color: #5d5d5d;
}
.detail-coach{
    display: inline-block;
    margin-right: 20rpx;
}
