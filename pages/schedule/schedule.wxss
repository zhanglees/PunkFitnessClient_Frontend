.training-list {
    width: 100%;
    box-sizing: border-box;
    margin-top: 48rpx;
}

.training-item {
    box-sizing: border-box;
    padding: 32rpx 24rpx;
    margin-bottom: 32rpx;
    background: #FFFFFF;
    border-radius: 12rpx;
    position: relative;
    display: flex;
    align-content: center;
}

.training-user {
    font-size: 32rpx;
    color: #222834;
    line-height: 40rpx;
}

.training-time {
    font-size: 24rpx;
    color: #707784;
    line-height: 40rpx;
}

.training-avatar {
    display: inline-block;
    overflow: hidden;
    width: 84rpx;
    height: 84rpx;
    margin-right: 24rpx;
    border-radius: 50%;
    border: 1px solid rgba(34, 40, 52, 0.03);
}

.training-status {
    width: 120rpx;
    height: 56rpx;
    border-radius: 0 12rpx 0 12rpx;
    font-weight: 500;
    line-height: 56rpx;
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    background: #386DF3;
}

.have-done {
    color: #fff;
    background: #00D878;
}

.have-cancel {
    color: #707784;
    background: #F1F1F5;
}

.img-container {
    border-radius: 50%;
    border: 1px solid rgba(34, 40, 52, 0.03);
    width: 84rpx;
    height: 84rpx;
    margin-right: 24rpx
}