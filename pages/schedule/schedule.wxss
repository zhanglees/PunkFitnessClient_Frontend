/* pages/schedule/schedule.wxss */

.container {
    padding: 48rpx 32rpx;
    background: #FAFAFC;
    min-height: 100vh;
}

.top-layout {
    width: 100%;
    color: #707784;
    height: 262rpx;
    background: #FFFFFF;
    box-shadow: 0px 12px 28px 0px rgba(34, 40, 52, 0.04);
    border-radius: 12px;
}


