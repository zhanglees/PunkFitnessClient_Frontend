.container {
    padding-bottom: 60rpx;
}

.question-list {
    width: 100%;
    text-align: left;
    box-sizing: border-box;
    padding: 0 32rpx;
}

.question-item {
    position: relative;
    margin-top: 48rpx;
    color: #222834;
}

.question-q {
    position: relative;
    line-height: 60rpx;
    margin-bottom: 32rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
}

.question-a {
    color: #707784;
    font-size: 28rpx;
    padding: 32rpx;
    box-sizing: border-box;
    line-height: 40rpx;
    background: #F7F7F9;
    border-radius: 12rpx;
}

.answer-remarks-show {
    margin-top: 20rpx;
    display: block;
}

.answer-remarks {
    color: #999;
}