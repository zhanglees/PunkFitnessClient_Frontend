.weui-canvas {
    width: 200px!important;
}

.action-item-s {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #222834;
    font-size: 32rpx;
    margin-bottom: 64rpx;
}

.action-item .action-item-s:last-child {
    margin-bottom: 0;
}

.action-item-s-c {
    display: block;
}

.action-item-s-title {
    color: #707784;
    padding-left: 40rpx;
    position: relative;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
}
.action-item-s-v{
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #222834;
}
.action-item-s-title::before {
    content: '';
    display: block;
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #F48038;
    z-index: 1;
    position: absolute;
    border: 8rpx solid #fff;
    border-right-width: 16rpx;
    border-left-width: 16rpx;
    left: -8rpx;
    top: 8rpx;
}

.action-item::before {
    content: '';
    width: 1px;
    border-right: 1px dashed #BCC0C7;
    top: 36rpx;
    bottom: 36rpx;
    left: 12rpx;
    display: block;
    position: absolute;
}

.action-item .action-item-s:nth-child(1) .action-item-s-title::before {
    background: #F48038;
}

.action-item .action-item-s:nth-child(2) .action-item-s-title::before {
    background: #386DF3;
}

.action-item .action-item-s:nth-child(3) .action-item-s-title::before {
    background: #23C451;
}

.action-item-head-r {
    font-size: 24rpx;
    color: #707784;
    position: relative;
    padding-top: 124rpx;
    line-height: 32rpx;
    word-break: keep-all;
    white-space: nowrap;
    width: 132rpx;
    text-align: right;
    vertical-align: top;
}

.action-item-s-c .zx-tip {
    border-radius: 50%;
    width: 12rpx;
    height: 12rpx;
    background: #60D481;
    display: inline-block;
    margin-right: 8rpx;
}

.action-item-head-c {
    flex: 1;
}

.share-icon {
    height: 48rpx;
    width: 48rpx;
    margin-right: 16rpx;
    position: relative;
    top: -8rpx;
}
.share-tip-icon {
    height: 32rpx;
    width: 32rpx;
    margin-right: 8rpx;
    vertical-align: text-bottom;
}

.video-shadow{
    height: 0;
    width: 0;
}
.user-video-wrapper .user-video{
    width: 100%;
    height: 100%;
}
.action-edit-video-wrapper .video-wrapper-inner {
    width: 100%;
    height: 100%;
    transform: rotate(0deg);
    border-radius: 12rpx;
    overflow: hidden;
}

.user-video-wrapper .user-video-bg {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    filter: blur(8px);
    border-radius: 12rpx;
    transform: rotate(0deg);
    z-index: -1;
}
.user-video-play{
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    top: 46rpx;
    left: 108rpx;
    display: block;
}

.video-wrapper::after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 48rpx;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 100%);
    border-radius: 0px 0px 12rpx 12rpx;
}