.container {
    padding: 32rpx;
    position: relative;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
}

.page-title {
    width: 100%;
    box-sizing: border-box;
    padding-top: 16rpx;
    background: #fff;
    font-size: 36rpx;
    line-height: 44rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.show-share-btn {
    color: #EC4C4C;
    line-height: 36rpx;
    font-size: 28rpx;
    vertical-align: middle;
    display: flex;
    align-items: center;
}

.classname {
    position: relative;
    /* padding-left: 50rpx; */
    font-size: 36rpx;
    font-weight: 500;
    color: #222834;
    line-height: 44rpx;
    height: 44rpx;
}

.classname .title-icon {
    height: 28rpx;
    width: 42rpx;
    margin-right: 8rpx;
}
