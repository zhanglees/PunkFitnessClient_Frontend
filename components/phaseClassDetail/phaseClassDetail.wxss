/* components/phaseClassDetail/phaseClassDetail.wxss */
.info-list {
  width: 100%;
  /* padding-bottom: 40rpx; */
  margin-top: 8px;
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
  border-bottom: 1px solid #F7F7F9;
  padding-bottom: 7px;
}

.info-item {
  display: inline-block;
  text-align: center;
  color: #707784;
  position: relative;
  word-break: keep-all;
  white-space: nowrap;
  flex: 1;
  width: 125px;
  font-size: 12px;
  font-weight: 400;
  line-height: 36px;
}

.info-item-act {
  color: var(--base);
  position: relative;
  /* margin-bottom: 10rpx; */
}

.info-item-act::after {
  position: absolute;
  width: 16px;
  height: 2px;
  border-radius: 1px;
  bottom: 0;
  left: 43%;
  right: 0;
  bottom: 6px;
  content: '';
  background-color: var(--base);
}

.detail-ul {
  width: 100%;
}

.detail-li {
  display: flex;
  justify-content: space-between;
  border: 1px solid #F1F1F3;
  margin: 32rpx 32rpx 0;
  border-radius: 12rpx;
  height: 70px;
}

.detail-li-left {
  display: inline-block;
  margin: 28rpx 0 28rpx 32rpx;
  /* position: absolute;
  left: 10rpx; */
}

.detail-li-right {
  display: flex;
  margin-right: 10rpx;
  margin: 28rpx 32rpx 28rpx 0;
  /* position: absolute;
  right: 30rpx; */
}

.name-style {
  height: 22px;
  font-size: 16px;
  font-weight: 500;
  color: #222834;
  line-height: 22px;
  margin-bottom: 4px;
}

.time-style {
  height: 16px;
  font-size: 12px;
  font-weight: 400;
  color: #707784;
  line-height: 16px;
}

.img-style {
  width: 24px;
  height: 24px;
  font-size: 12px;
  border-radius: 50%;
  border: 1px solid #fff;
  margin: 7px 4px 0 0;
}